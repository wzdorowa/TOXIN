mixin bulleted-list({height = 'low', values = [{modifier: 'light-gray', text: 'Text', padding: 'increased-indent'}], } = {})

  ul.bulleted-list(class=`bulleted-list_${height}-height`)
      each value in values
        - const {modifier, text, padding} = value
        li.bulleted-list__item(class=`bulleted-list__item_${modifier}`, class=`bulleted-list__item_with-${padding}`)
          = text
