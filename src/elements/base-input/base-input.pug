mixin base-input({label, placeholder = 'Введите значение', type = 'text', arrow = false, borderRadiusTop = false, borderRadiusBottom = false, hide = false, readonly = false, forDropdown = false} = {label, placeholder, type, arrow, borderRadiusTop, borderRadiusBottom, hide, readonly, forDropdown})
  div.input()
    span(class=`input__description ${hide ? 'input__description_'+hide : ''}`)= label
    .input__wrapper
      input.input__content(class=`${borderRadiusTop ? 'input__content_with-border-radius-'+borderRadiusTop : ''}`,
      class=`${borderRadiusBottom ? 'input__content_with-border-radius-'+borderRadiusBottom : ''}`, class=`${forDropdown ? 'input__content_for-dropdown' : ''}`, type= type,
      name='input-content', placeholder= placeholder, readonly= readonly)
      span(class=`${arrow ? 'input__icon-'+arrow : ''}`)
