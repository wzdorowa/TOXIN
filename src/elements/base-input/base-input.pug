mixin base-input(label, padding, placeholder, arrow, borderRadiusTop, borderRadiusBottom, attributeName)
    div.input-container()
        span(class='input-container__description-'+padding || false)= label
        .input-container__wrapper(class='input-container_'+arrow || false, class='input-container_size-'+size || 'large')
            input.input-container__content(class='input-container__content_border-radius-'+borderRadiusTop || false,
            class='input-container__content_border-radius-'+borderRadiusBottom || false, type='text',
            name= attributeName, placeholder= placeholder)
