mixin advantages({advantagesList = [{advantageTitle: 'Advantage', advantageDescription: 'Advantage description', advantageIcon: 'mood'}]} = {})
  .advantages
    each advantagesItem in advantagesList 
      - const {advantageTitle, advantageDescription, advantageIcon} = advantagesItem
      .advantages__item
        span.advantages__icon(class=`advantages__icon_with-sign-${advantageIcon}`)= advantageIcon
        .advantages__content
          span.advantages__title= advantageTitle
          span.advantages__value= advantageDescription