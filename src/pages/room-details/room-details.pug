extends ../base.pug

include ../../components/header/header.pug
include ../../elements/advantages/advantages.pug
include ../../components/footer/footer.pug
include ../../components/copyright/copyright.pug
include ../../elements/diagramma/diagramma.pug
include ../../elements/review/review.pug
include ../../components/form-result-search-room/form-result-search-room.pug

block content
	.room-details-container-wrapper
		+header()
		.room-details-content
			.room-details-content__slider
				img.room-details-content__slider-image-1(src="images/image1.png")
				.room-details-content__slider-group-image
					img.room-details-content__slider-image-2(src="images/image2.png")
					img.room-details-content__slider-image-3(src="images/image3.png")
			.room-details-content__information
				.room-details-content__number-impressions
					.room-details-content__number-info
						h2.room-details-content__title Сведения о номере
						+advantages('Комфорт', 'Шумопоглощающие стены', 'mood', 'line', 'large', '14')
						+advantages('Удобство', 'Окна в каждой из спален', 'locationCity', 'line', 'large', '14')
						+advantages('Уют', 'Номер оснащен камином', 'whatshot', '', 'large', '14')
					.room-details-content__impressions
						h2.room-details-content__title Впечатления от номера
						+diagramma('260', 'голосов')
				.room-details-content__column-narrow
					+resultSearchRoom('888', 'люкс', '9 990')
				.room-details-content__review
					.room-details-content__review-description
						h2.room-details-content__title-review Отзывы посетителей номера
						span.room-details-content__review-sum 2 отзыва
					+review('Мурад Сарафанов', '5 дней назад', 'Murad', '', 'small', 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.')
					+review('Патрисия Стёклышкова', 'Неделю назад', 'Patriziya', '', 'small', 'Обслуживание на высоте! Всё аккуратно, чисто. Завтраки в номер советую заказать, каждый день новое блюдо и десерт как комплимент')
				.room-details-content__extra-info
					.room-details-content-regulations
						h2.room-details-content__title-regulations Правила
						ul.room-details-content-regulations__list
							each val, index in ['Нельзя с питомцами', 'Без вечеринок и мероприятий', 'Время прибытия — после 13:00, а выезд до 12:00']
								li.room-details-content-regulations__item= val
					.room-details-content__cancel
						h2.room-details-content__title-cancel Отмена
						p.room-details-content__cancel-description Бесплатная отмена в течение 48 ч. После этого при отмене не позднее чем за 5 дн. до прибытия вы получите полный возврат за вычетом сбора за услуги.		
		+footer('borderTop')
		+copyright()