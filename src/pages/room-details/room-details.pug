extends ../layout/layout.pug

include ../../components/header/header.pug
include ../../components/collage/collage.pug
include ../../elements/advantages/advantages.pug
include ../../components/footer/footer.pug
include ../../components/copyright/copyright.pug
include ../../elements/diagram/diagram.pug
include ../../elements/bulleted-list/bulleted-list.pug
include ../../components/comments/comments.pug
include ../../components/form-room-cost/form-room-cost.pug
include ../../components/calendar/calendar.pug
include ../../components/date-dropdown/date-dropdown.pug

block meta
    meta(name='keywords', content='room details, toxin')
    meta(name='description', content='Room details page TOXIN')
block title
    title Room details page
block content
  .room-details
    -const images = ['images/images-room/room-image1.jpeg', 'images/images-room/room-image2.jpeg', 'images/images-room/room-image3.jpeg']
    +collage(images)
    .room-details__content
      .room-details__information
        .room-details__room-impressions
          .room-details__advantages
            - const list = [{advantageTitle: 'Комфорт', advantageDescription: 'Шумопоглощающие стены', advantageIcon: 'mood'}, {advantageTitle: 'Удобство', advantageDescription: 'Окна в каждой из спален', advantageIcon: 'location_city'}, {advantageTitle: 'Уют', advantageDescription: 'Номер оснащен камином', advantageIcon: 'whatshot'}]
            +advantages({title: 'Сведения о номере', advantagesList: list})
          .room-details__diagram
            +diagram({title: 'Впечатления от номера', impressions: {amazing: 130, good: 65, satisfactorily: 65, bad: 0}})
        .room-details__comment
          -const commentList = [{userName: 'Мурад Сарафанов', date: '5 дней назад', srcImage: 'images/user-icon/Murad.jpeg', text: 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.', amountLike: 12, likeChecked: 'checked'}, {userName: 'Патрисия Стёклышкова', date: 'Неделю назад', srcImage: 'images/user-icon/Patriziya.jpeg', text: 'Обслуживание на высоте! Всё аккуратно, чисто. Завтраки в номер советую заказать, каждый день новое блюдо и десерт как комплимент', amountLike: 2, likeChecked: false }]
          +comments({commentsList: commentList})
        .room-details__extra-info
          .room-details__rules
            - const rules = ['Нельзя с питомцами', 'Без вечеринок и мероприятий', 'Время прибытия — после 13:00, а выезд до 12:00']
            +bulleted-list({title: 'Правила', values: rules})
          .room-details__cancel
            h2.room-details__title-cancel Отмена
            p.room-details__cancel-description Бесплатная отмена в течение 48 ч. После этого при отмене не позднее чем за 5 дн. до прибытия вы получите полный возврат за вычетом сбора за услуги.
      .room-details__reservation-card
        .room-details__form-room-cost
          +form-room-cost({number: '888', text: 'люкс', cost: '9 990', dateFormat: ['ДД.ММ.ГГГГ', 'ДД.ММ.ГГГГ']})