block content
    .columns
        .columns__item
            .inputs-wrapper
                +base-input('Text field', 'Email', 'large', '', 'top', 'bottom')
                +base-input('Dropdown', 'Сколько гостей', 'large', 'arrow-down', 'top', 'bottom')
                +base-input('Masked text field', 'ДД.ММ.ГГГГ', 'large', '', 'top', 'bottom')
                +base-input('Date dropdown', 'ДД.ММ.ГГГГ', 'small', 'arrow-down', 'top', 'bottom')
                +base-input('Date dropdown', '19.08.2019', 'small', 'arrow-down', 'top', 'bottom')
                +base-input('Filter date dropdown', '19 авг - 23 авг', 'medium', 'arrow-down', 'top', 'bottom')
                +base-input('Subscription text field', 'Email', 'medium', 'arrow', 'top', 'bottom')
        .columns__item
            .chechbox-buttons-wrapper
                h1.buttons-title Chechbox buttons
                +checkbox-button('Можно курить')
                +checkbox-button('Можно с питомцами', 'checked')
                +checkbox-button('Можно пригласить гостей (до 10 человек)', 'checked')
            .radio-buttons-wrapper
                h1.buttons-title Radio buttons
                .buttons-string
                    +radio-button('Мужчина', 'checked')
                    +radio-button('Женщина')
            .toggle-wrapper
                h1.buttons-title Toggle
                +toggle('Получать спецпредложения', 'checked')
                +toggle('Получать спецпредложения')
            .like-button-wrapper
                h1.buttons-title Like button
                .buttons-string
                    +like-button('2')
                    +like-button('12', 'checked')
            .rate-button-wrapper
                h1.buttons-title Rate button
                .buttons-string
                    .rate-group-button
                        +rate-button()
                    .rate-group-button
                        +rate-button()
        .columns__item
            .range-slider-wrapper
                +range-slider('Range Slider')
            .base-button-wrapper
                h1.buttons-title Buttons
                +base-button('Click Me', 'medium', 'large', 'background', '')
                +base-button('Click Me', 'medium', 'large', 'border', '')
                +base-button('Click Me', '', 'large', 'noDecor', '')
                +base-button('Перейти к оплате', 'large', 'large', 'background', 'arrow')
            .pagination-wrapper
                h1.buttons-title Pagination
                +pagination('1 - 12 из 100+ вариантов аренды')
    .columns
        .columns__item
            .dropdown
                +dropdown('Сколько гостей', 'large')
    .columns
        .columns__item
            .expandable-checkbox-list
                +checkbox-list('Expandable checkbox list')
        .columns__item
            .rich-checkbox-buttons
                h1.buttons-title Rich checkbox buttons
                +checkbox-button('Широкий коридор', '', 'bold', 'Ширина коридоров в номере не менее 91 см.')
                +checkbox-button('Помощник для инвалидов', '', 'bold', 'На 1 этаже вас встретит специалист и проводит до номера.')
        .columns__item
            .bullet-list-wrapper
                h1.buttons-title Bullet list
                +bulleted-list('Нельзя с питомцами')
                +bulleted-list('Без вечеринок и мероприятий')
                +bulleted-list('Время прибытия - после 13:00, а выезд до 12:00')
    .columns
        .columns__item
            .advantages-wrapper
                +advantages('Комфорт', 'Шумопоглощающие стены', 'mood', 'line')
                +advantages('Удобство', 'Окна в каждой из спален', 'locationCity', 'line')
        .columns__item
            .review-wrapper
                +review('Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.')
    .columns-content-wrapper
        .columns-content
            .columns__item
                .search-room-wrapper
                    +search-room('Найдем номера под ваши пожелания')
                .check-in-wrapper
                    +check-in('Регистрация аккаунта')
            .columns__item
                .result-search-room-wrapper
                    +room-cost-form('888', 'люкс', '9 990')
                .login-wrapper
                    +login('Вход')
            .columns__item
                .datepicker-wrapper
                    +datepicker()
                .number-card-wrapper
                    +number-card('888', 'люкс', '9 990', '145', 'border')
                .number-card-wrapper
                    +number-card('840', 'люкс', '9 990', '65', 'border')
        .rows-content
            .header-wrapper
                +header()
        .rows-content
            .header-wrapper
                +header()
        .rows-content
            .footer-wrapper
                +footer()
                +copyright()
            .footer-wrapper
                +footer()