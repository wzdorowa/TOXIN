extends ../layout/layout.pug

include ../../elements/input-date/input-date.pug
include ../../elements/checkbox-button/checkbox-button.pug
include ../../elements/radio-button/radio-button.pug
include ../../elements/toggle/toggle.pug
include ../../elements/like-button/like-button.pug
include ../../elements/rating/rating.pug
include ../../elements/slider/slider.pug
include ../../elements/button/button.pug
include ../../elements/pagination/pagination.pug
include ../../elements/checkbox-list/checkbox-list.pug
include ../../elements/bulleted-list/bulleted-list.pug
include ../../elements/advantages/advantages.pug
include ../../components/comment/comment.pug
include ../../components/form-room-cost/form-room-cost.pug
include ../../components/form-search-room/form-search-room.pug
include ../../components/form-check-in/form-check-in.pug
include ../../components/login/login.pug
include ../../components/room-card/room-card.pug
include ../../components/calendar/calendar.pug
include ../../components/date-dropdown/date-dropdown.pug
include ../../elements/logo/logo.pug
include ../../components/header/header.pug
include ../../components/footer/footer.pug
include ../../components/copyright/copyright.pug
include ../../components/social-button/social-button.pug

block meta
    meta(name='keywords', content='демонстрационная страница компонентов, toxin, ui kit')
    meta(name='description', content='Демонстрационная страница компонентов используемых в TOXIN')
block title
    title Demo page
block content
    .components
      .components__wrapper
        .components__inputs
            .components__inputs-item
              span.components__input-title= 'Text field'
              .components__input-container
                input.components__input(type='email', placeholder='Email')
            .components__inputs-item
              - const dataForDropdownFirst = [{subjectOfCalculation: 'Взрослые', count: '0'}, {subjectOfCalculation: 'Дети', count: '0'}, {subjectOfCalculation: 'Младенцы', count: '0'}]
                +dropdown({
                  label: 'Dropdown',
                  placeholder: 'Сколько гостей',
                  isButtonsHidden: true,
                  dropdownRows: dataForDropdownFirst,
                  wordsForm: `{"0": ["гость", "гостя", "гостей"], "1": ["младенец", "младенца", "младенцев"]}`,
                })
            .components__inputs-item
              span.components__input-title= 'Masked text field'
              .components__input-container
                +input-date
            .components__inputs-item
                +date-dropdown({
                  labelArray: ['Date dropdown', 'Date dropdown'],
                  size: 'small',
                  amountField: 'with-two-inputs'
                })
            .components__inputs-item.components__inputs-item_width_medium
                +date-dropdown({
                  labelArray: ['Filter date dropdown'],
                  datesFormat: ['ДД.ММ - ДД.ММ'],
                  size: 'large',
                  amountField: 'with-one-input',
                })
            .components__inputs-item.components__inputs-item_width_medium.components__inputs-item_type_email
              span.components__input-title-email= 'Subscription text field'
              .components__input-container
                input.components__input(type='email', placeholder='Email')
        .components__elements.components__elements_column_first
            .components__checkbox-buttons
                label.buttons-title Chechbox buttons
                +checkbox-button({value: 'Можно курить'})
                +checkbox-button({value: 'Можно с питомцами', checked: 'checked'})
                +checkbox-button({value: 'Можно пригласить гостей (до 10 человек)', checked: 'checked'})
            .components__radio-buttons
                label.buttons-title Radio buttons
                .components__radio-buttons-string
                    +radio-button({text: 'Мужчина', checked: 'checked', name: 'gender'})
                    +radio-button({text:'Женщина', name: 'gender'})
            .components__toggle
                label.buttons-title Toggle
                +toggle({text: 'Получать спецпредложения', checked: 'checked'})
                +toggle({text: 'Получать спецпредложения'})
            .components__like-button
                label.buttons-title Like button
                .components__like-button-string
                  .components__like-button-content
                    +like-button({text: '2'})
                  .components__like-button-content
                    +like-button({text: '12', checked: 'checked'})
            .components__rate-button
              label.buttons-title Rate button
              .components__rate-button-string
                  .components__rate-button-group
                      +rating({amountStar: '4'})
                  .components__rate-button-group
                      +rating({amountStar: '5'})
        .components__elements.components__elements_column_last
            .components__range-slider
                +slider({text: 'Range Slider'})
            .components__base-button
                label.buttons-title Buttons
                .components__base-button-content.components__base-button-content_small
                  +button({text: 'Click Me', decor: 'solid', size: 'large'})
                .components__base-button-content.components__base-button-content_small
                  +button({text: 'Click Me', decor: 'bordered', size: 'large'})
                .components__base-button-content.components__base-button-content_small
                  +button({text: 'Click Me'})
                .components__base-button-content.components__base-button-content_big
                  +button({text: 'Перейти к оплате', decor: 'solid', directed: true, size: 'large'})
            .components__pagination
                label.buttons-title Pagination
                +pagination({text: '1 - 12 из 100+ вариантов аренды'})
    .components
      .components__wrapper
        .components__dropdown
          - const dataForDropdownSecond = [{subjectOfCalculation: 'Спальни', count: '2'}, {subjectOfCalculation: 'Кровати', count: '2'}, {subjectOfCalculation: 'Ванные комнаты', count: '0'}]
            +dropdown({
              label: 'Удобства номера',
              placeholder: '2 спальни, 2 кровати',
              isButtonsHidden: true,
              dropdownRows: dataForDropdownSecond,
              wordsForm: `{"0": ["спальня", "спальни", "спален"], "1": ["кровать", "кровати", "кроватей"], "2": ["ванная комната", "ванные комнаты", "ванных комнат"]}`,
            })
    .components
      .components__wrapper
        .components__expandable-checkbox-list
            - const checkboxList = [{value: 'Завтрак'}, {value: 'Письменный стол', checked: 'checked'}, {value: 'Стул для кормления', checked: 'checked'}, {value: 'Кроватка', checked: 'checked'}, {value: 'Телевизор'}, {value: 'Шампунь'}, {value: 'Телевизор'}, {value: 'Шампунь'}]
            +checkbox-list({text: 'Expandable checkbox list', checkboxList})
        .components__rich-checkbox-buttons
            label.buttons-title Rich checkbox buttons
            .components__rich-checkbox-buttons-list
              +checkbox-button({
                value: 'Широкий коридор',
                isBoldText: true,
                description: 'Ширина коридоров в номере не менее 91 см.'
                })
              +checkbox-button({
                value: 'Помощник для инвалидов',
                isBoldText: true,
                description: 'На 1 этаже вас встретит специалист и проводит до номера.'
                })
        .components__bullet-list
            label.buttons-title Bullet list
            - const rules = ['Нельзя с питомцами', 'Без вечеринок и мероприятий', 'Время прибытия — после 13:00, а выезд до 12:00']
            +bulleted-list({values: rules})
    .components
      .components__wrapper
        .components__advantages
            - const list = [{advantageTitle: 'Комфорт', advantageDescription: 'Шумопоглощающие стены', advantageIcon: 'mood'}, {advantageTitle: 'Удобство', advantageDescription: 'Окна в каждой из спален', advantageIcon: 'location_city'}]
            +advantages({advantagesList: list})
        .components__comment
            +comment({
              title: 'Мурад Сарафанов',
              value: '5 дней назад',
              srcImage: 'images/user-icon/Murad.jpeg',
              text: 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.'
              })
    .components-content-wrapper
        .components-content
          .components-content__wrapper
            .components-content__item
                .components-content__search-room
                    -const searchRoomDateFormat = ['ДД.ММ.ГГГГ', 'ДД.ММ.ГГГГ']
                    +form-search-room({text: 'Найдём номера под ваши пожелания', dateFormat: searchRoomDateFormat})
                .components-content__check-in
                    +form-check-in({text: 'Регистрация аккаунта'})
            .components-content__item
                .components-content__result-search-room
                    +form-room-cost({number: '888', text: 'люкс', cost: '9 990', dateFormat: ['ДД.ММ.ГГГГ', 'ДД.ММ.ГГГГ']})
                .components-content__login
                    +login({text: 'Вход'})
            .components-content__item
                .components-content__datepicker
                    +calendar()
                      .datepicker-here(data-range='true').js-datepicker-here
                .components-content__room-card
                    +room-card({number: '888', text: 'люкс', cost: '9 990', amount: '145', images: ['./images/images-rooms/image888.jpeg', './images/images-rooms/image350.jpeg', './images/images-rooms/image352.jpeg', './images/images-rooms/image444.jpeg'], amountStar: '5'})
                .components-content__room-card
                    +room-card({number: '840', text: 'люкс', cost: '9 990', amount: '65', images: ['./images/images-rooms/image350.jpeg', './images/images-rooms/image352.jpeg', './images/images-rooms/image444.jpeg', './images/images-rooms/image450.jpeg'], amountStar: '4'})
        .components-header
          .components-header__wrapper
            .components-header__container
              +header()
        .components-footer
          .components-footer__wrapper
            +footer()
            +copyright()
            