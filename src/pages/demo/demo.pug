block meta
    meta(name="keywords", content="демонстрационная страница компонентов, toxin, ui kit")
    meta(name="description", content="Демонстрационная страница компонентов используемых в TOXIN")
block title
    title Demo page
block content
    .columns
        .columns__item
            .inputs
                .inputs__item
                    +base-input('Text field', 'Email', '', 'top', 'bottom', '')
                .inputs__item
                    +dropdown('Dropdown', 'Сколько гостей', 'hidden', 'readonly')
                        +dropdown-row('Взрослые', '0')
                        +dropdown-row('Дети', '0')
                        +dropdown-row('Младенцы', '0')
                .inputs__item
                    +base-input('Masked text field', 'ДД.ММ.ГГГГ', '', 'top', 'bottom', '')
                .inputs__item
                    .inputs-with-datepicker
                        .inputs-with-datepicker__inputs
                            .inputs-with-datepicker__input.inputs-with-datepicker__input_small-width
                                +base-input('Date dropdown', 'ДД.ММ.ГГГГ', 'arrow-down', 'top', 'bottom', '', 'readonly')
                            .inputs-with-datepicker__input.inputs-with-datepicker__input_small-width
                                +base-input('Date dropdown', '19.08.2019', 'arrow-down', 'top', 'bottom', '', 'readonly')
                        .inputs-with-datepicker__datepicker
                            +datepicker()
                .inputs__item.inputs__item_medium-width
                    .inputs-with-datepicker
                        .inputs-with-datepicker__input
                            +base-input('Filter date dropdown', '19 авг - 23 авг', 'arrow-down', 'top', 'bottom', '', 'readonly')
                        .inputs-with-datepicker__datepicker
                            +datepicker()
                .inputs__item.inputs__item_medium-width
                    +base-input('Subscription text field', 'Email', 'arrow', 'top', 'bottom', '')
        .columns__item
            .elements
              .elements__checkbox-buttons
                  h1.buttons-title Chechbox buttons
                  +checkbox-button('Можно курить')
                  +checkbox-button('Можно с питомцами', 'checked')
                  +checkbox-button('Можно пригласить гостей (до 10 человек)', 'checked')
              .elements__radio-buttons
                  h1.buttons-title Radio buttons
                  .elements__radio-buttons__string
                      +radio-button('Мужчина', 'checked', 'gender')
                      +radio-button('Женщина', '', 'gender')
              .elements__toggle
                  h1.buttons-title Toggle
                  +toggle('Получать спецпредложения', 'checked')
                  +toggle('Получать спецпредложения')
              .elements__like-button
                  h1.buttons-title Like button
                  .buttons-string
                    .elements__like-button-content
                      +like-button('2')
                    .elements__like-button-content
                      +like-button('12', 'checked')
              .elements__rate-button
                h1.buttons-title Rate button
                .elements__rate-button-string
                    .elements__rate-button-group
                        +rate-button()
                    .elements__rate-button-group
                        +rate-button()
        .columns__item
          .elements
            .range-slider
                +range-slider('Range Slider')
            .base-button
                h1.buttons-title Buttons
                .base-button__content.base-button__content_small
                  +base-button('Click Me', 'background', '', 'button')
                .base-button__content.base-button__content_small
                  +base-button('Click Me', 'border', '', 'button')
                .base-button__content.base-button__content_small
                  +base-button('Click Me', 'noDecor', '', 'button')
                .base-button__content.base-button__content_big
                  +base-button('Перейти к оплате', 'background', 'arrow', 'button')
            .pagination
                h1.buttons-title Pagination
                +pagination('1 - 12 из 100+ вариантов аренды')
    .columns
        .columns__item
            .dropdown-container
                +dropdown('Удобства номера', '2 спальни, 2 кровати...', 'hidden', 'readonly')
                  +dropdown-row('Спальни', '2')
                  +dropdown-row('Кровати', '1')
                  +dropdown-row('Ванные комнаты', '0')
    .columns
        .columns__item
            .expandable-checkbox-list
                +checkbox-list('Expandable checkbox list')
                  +checkbox-button('Завтрак')
                  +checkbox-button('Письменный стол', 'checked')
                  +checkbox-button('Стул для кормления', 'checked')
                  +checkbox-button('Кроватка', 'checked')
                  +checkbox-button('Телевизор')
                  +checkbox-button('Шампунь')
                  +checkbox-button('Телевизор')
                  +checkbox-button('Шампунь')
        .columns__item
            .rich-checkbox-buttons
                h1.buttons-title Rich checkbox buttons
                +checkbox-button('Широкий коридор', '', 'bold', 'Ширина коридоров в номере не менее 91 см.')
                +checkbox-button('Помощник для инвалидов', '', 'bold', 'На 1 этаже вас встретит специалист и проводит до номера.')
        .columns__item
            .bullet-list
                h1.buttons-title Bullet list
                - const rules = [{modifier: 'light-gray', text: 'Нельзя с питомцами', padding: 'increased-indent'}, {modifier: 'light-gray', text: 'Без вечеринок и мероприятий', padding: 'increased-indent'}, {modifier: 'light-gray', text: 'Время прибытия — после 13:00, а выезд до 12:00', padding: 'increased-indent'}]
                +bulleted-list(rules)
    .columns
        .columns__item
            .elements
                .elements__advantages
                    .elements__advantages-item
                        +advantages('Комфорт', 'Шумопоглощающие стены', 'mood')
                    .elements__advantages-item
                        +advantages('Удобство', 'Окна в каждой из спален', 'locationCity')
        .columns__item
            .elements
                .elements__review
                    +review('Мурад Сарафанов', '5 дней назад', 'Murad', '', 'small', 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.')
    .columns-content-wrapper
        .columns-content
            .columns-content__item
                .columns-content__search-room
                    +search-room('Найдём номера под ваши пожелания')
                .columns-content__check-in
                    +check-in('Регистрация аккаунта')
            .columns-content__item
                .columns-content__result-search-room
                    +room-cost-form('888', 'люкс', '9 990')
                .columns-content__login
                    +login('Вход')
            .columns-content__item
                .columns-content__datepicker
                    +datepicker()
                .columns-content__number-card
                    +number-card('888', 'люкс', '9 990', '145', 'border')
                .columns-content__number-card
                    +number-card('840', 'люкс', '9 990', '65', 'border')
        .demo-header
            .demo-header__container
              +header()
        .demo-footer
            +footer('borderTop', 'marginTop')
            +copyright()