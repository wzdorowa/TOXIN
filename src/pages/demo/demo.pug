extends ../base.pug

include ../../elements/base_input/base_input.pug
include ../../elements/checkbox_button/checkbox_button.pug
include ../../elements/radio_button/radio_button.pug
include ../../elements/toggle/toggle.pug
include ../../elements/like_button/like_button.pug
include ../../elements/rate_button/rate_button.pug
include ../../elements/range_slider/range_slider.pug
include ../../elements/base-button/base-button.pug
include ../../elements/pagination/pagination.pug

block content
    .columns
        .column
            .inputs-wrapper
                +base_input('Text field', 'Email', 'large')
                +base_input('Dropdown', 'Сколько гостей', 'large', 'arrow-down')
                +base_input('Masked text field', 'ДД.ММ.ГГГГ', 'large')
                +base_input('Date dropdown', 'ДД.ММ.ГГГГ', 'small', 'arrow-down')
                +base_input('Date dropdown', '19.08.2019', 'small', 'arrow-down')
                +base_input('Filter date dropdown', '19 авг - 23 авг', 'medium', 'arrow-down')
                +base_input('Subscription text field', 'Email', 'medium', 'arrow')
        .column
            .chechbox_buttons-wrapper
                h1.buttons-title Chechbox buttons
                +checkbox_button('Можно курить')
                +checkbox_button('Можно с питомцами', 'checked')
                +checkbox_button('Можно пригласить гостей (до 10 человек)', 'checked')
            .radio_buttons-wrapper
                h1.buttons-title Radio buttons
                .buttons_string
                    +radio_button('Мужчина', 'checked')
                    +radio_button('Женщина')
            .toggle-wrapper
                h1.buttons-title Toggle
                +toggle('Получать спецпредложения', 'checked')
                +toggle('Получать спецпредложения')
            .like_button-wrapper
                h1.buttons-title Like button
                .buttons_string
                    +like_button('2')
                    +like_button('12', 'checked')
            .rate_button-wrapper
                h1.buttons-title Rate button
                .buttons_string
                    .rate_group_button
                        +rate_button('checked')
                        +rate_button('checked')
                        +rate_button('checked')
                        +rate_button('checked')
                        +rate_button()
                    .rate_group_button
                        +rate_button('checked')
                        +rate_button('checked')
                        +rate_button('checked')
                        +rate_button('checked')
                        +rate_button('checked')
        .column
            .range_slider-wrapper
                h1.buttons-title Range slider
                +range_slider('5000', '10000')
            .base_button-wrapper
                h1.buttons-title Buttons
                +base-button('Click Me', 'small', 'background')
                +base-button('Click Me', 'small', 'border')
                +base-button('Click Me', '', 'no-decor')
                +base-button('Перейти к оплате', 'large', 'background')
            .pagination-wrapper
                h1.buttons-title Pagination
                +pagination('1 - 12 из 100+ вариантов аренды')