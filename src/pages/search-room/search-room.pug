extends ../layout/layout.pug

include ../../components/header/header.pug
include ../../components/footer/footer.pug
include ../../components/copyright/copyright.pug
include ../../components/dropdown/dropdown.pug
include ../../components/date-dropdown/date-dropdown.pug
include ../../elements/slider/slider.pug
include ../../elements/checkbox-button/checkbox-button.pug
include ../../elements/checkbox-list/checkbox-list.pug
include ../../components/room-card/room-card.pug
include ../../elements/pagination/pagination.pug

block meta
    meta(name='keywords', content='search room, toxin')
    meta(name='description', content='Search room page TOXIN')
block title
    title Search room page
block content
  -const rooms = [{number: '888', text: 'люкс', cost: '9 990', amount: '145', images: ['./images/image888.jpeg', './images/image350.jpeg', './images/image352.jpeg', './images/image444.jpeg'], amountActiveStar: '5'}, {number: '840', cost: '9 990', amount: '65', images: ['./images/image350.jpeg', './images/image352.jpeg', './images/image444.jpeg', './images/image450.jpeg'], amountActiveStar: '4'}, {number: '980', text: 'люкс', cost: '8 500', amount: '35', images: ['./images/image352.jpeg', './images/image444.jpeg', './images/image450.jpeg', './images/image666.jpeg'], amountActiveStar: '3'}, {number: '856', cost: '7 300', amount: '19', images: ['./images/image444.jpeg', './images/image450.jpeg', './images/image666.jpeg', './images/image678.jpeg'], amountActiveStar: '5'}, {number: '740', cost: '6 000', amount: '44', images: ['./images/image450.jpeg', './images/image666.jpeg', './images/image678.jpeg', './images/image740.jpeg'], amountActiveStar: '4'}, {number: '982', cost: '5 800', amount: '56', images: ['./images/image666.jpeg', './images/image678.jpeg', './images/image740.jpeg', './images/image840.jpeg'], amountActiveStar: '3'}, {number: '678', cost: '5 500', amount: '45', images: ['./images/image678.jpeg', './images/image740.jpeg', './images/image840.jpeg', './images/image856.jpeg'], amountActiveStar: '5'}, {number: '450', cost: '5 300', amount: '39', images: ['./images/image740.jpeg', './images/image840.jpeg', './images/image856.jpeg', './images/image980.jpeg'], amountActiveStar: '4'}, {number: '350', cost: '5 000', amount: '77', images: ['./images/image840.jpeg', './images/image856.jpeg', './images/image980.jpeg', './images/image982.jpeg'], amountActiveStar: '3'}, {number: '666', cost: '5 000', amount: '25', images: ['./images/image856.jpeg', './images/image980.jpeg', './images/image982.jpeg', './images/image888.jpeg'], amountActiveStar: '5'}, {number: '444', cost: '5 000', amount: '15', images: ['./images/image980.jpeg', './images/image982.jpeg', './images/image888.jpeg', './images/image350.jpeg'], amountActiveStar: '4'}, {number: '352', cost: '5 000', amount: '55', images: ['./images/image982.jpeg', './images/image888.jpeg', './images/image350.jpeg', './images/image352.jpeg'], amountActiveStar: '3'}];
  .search-room__content
    .search-room__filter-button.js-search-room__filter-button
    .search-room__filter.js-search-room__filter
      .search-room__filter-inputs
        +date-dropdown({
          labelArray: ['Даты пребывания в отеле'],
          datesFormat: ['ДД.ММ - ДД.ММ'],
          size: 'large',
          amountField: 'with-one-input',})
        .search-room__filter-input
          - const dataForDropdownFirst = [{subjectOfCalculation: 'Взрослые', count: '3'}, {subjectOfCalculation: 'Дети', count: '0'}, {subjectOfCalculation: 'Младенцы', count: '1'}]
          +dropdown({
            label: 'Гости',
            placeholder: '3 гостя, 1 младенец',
            isButtonsHidden: true,
            dropdownRows: dataForDropdownFirst,
            wordsForm: `{"0": ["гость", "гостя", "гостей"], "1": ["младенец", "младенца", "младенцев"]}`,
          })
      .search-room__filter-range-slider
        +slider({text: 'Диапазон цены'})
        span.search-room__filter-range-slider-description Стоимость за сутки пребывания в номере
      .search-room__filter-checkbox-buttons
        label.search-room__filter-item-title Правила дома
        .search-room__filter-checkbox-buttons-group
          +checkbox-button({value: 'Можно курить'})
          +checkbox-button({value: 'Можно с питомцами', checked: 'checked'})
          +checkbox-button({value: 'Можно пригласить гостей (до 10 человек)', checked: 'checked'})
      .search-room__filter-rich-checkbox
        label.search-room__filter-item-title Доступность
        .search-room__filter-rich-checkbox-group
          +checkbox-button({
            value: 'Широкий коридор',
            isBoldText: true,
            description: 'Ширина коридоров в номере не менее 91 см.'
            })
          +checkbox-button({
            value: 'Помощник для инвалидов',
            isBoldText: true,
            description: 'На 1 этаже вас встретит специалист и проводит до номера.'
            })
      .search-room__filter-dropdown
        - const dataForDropdownSecond = [{subjectOfCalculation: 'Спальни', count: '2'}, {subjectOfCalculation: 'Кровати', count: '2'}, {subjectOfCalculation: 'Ванные комнаты', count: '0'}]
        +dropdown({
          label: 'Удобства номера',
          placeholder: '2 спальни, 2 кровати...',
          isButtonsHidden: true,
          dropdownRows: dataForDropdownSecond,
          wordsForm: `{"0": ["спальня", "спальни", "спален"], "1": ["кровать", "кровати", "кроватей"], "2": ["ванная комната", "ванные комнаты", "ванных комнат"]}`,
        })
      .search-room__filter-options
        - const checkboxList = [{value: 'Завтрак'}, {value: 'Письменный стол', checked: 'checked'}, {value: 'Стул для кормления', checked: 'checked'}, {value: 'Кроватка', checked: 'checked'}, {value: 'Телевизор'}, {value: 'Шампунь'}, {value: 'Телевизор'}, {value: 'Шампунь'}]
        +checkbox-list({text: 'Дополнительные удобства', checkboxList})
    .search-room__result
      label.search-room__result-title Номера, которые мы для вас подобрали
      .search-room__result-cards-numbers
        each room in rooms
          .search-room__card-number
            +room-card(room)
      .search-room__result-pagination
        +pagination({text: '1 – 12 из 100+ вариантов аренды'})