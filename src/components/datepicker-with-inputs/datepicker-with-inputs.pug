include ../../components/datepicker/datepicker.pug
include ../../elements/base-input/base-input.pug

mixin datepicker-with-inputs({labelArray, dates, size, amountField} = {})
  .datepicker-group
    .datepicker-group__inputs
      if (amountField === 'only')
        .datepicker-group__input(class=`datepicker-group__input_${size}` || false)
          +base-input({
            label: labelArray[0],
            placeholder: dates[0],
            arrow: 'arrow-down',
            borderRadiusTop: 'top',
            borderRadiusBottom: 'bottom',
            readonly: 'readonly',
            })
      else if (amountField === 'two')
        .datepicker-group__input(class=`datepicker-group__input_${size}` || false)
          +base-input({
            label: labelArray[0],
            placeholder: dates[0],
            arrow: 'arrow-down',
            borderRadiusTop: 'top',
            borderRadiusBottom: 'bottom',
            readonly: 'readonly',
          })
        .datepicker-group__input(class=`datepicker-group__input_${size}` || false)
          +base-input({
            label: labelArray[1],
            placeholder: dates[1],
            arrow: 'arrow-down',
            borderRadiusTop: 'top',
            borderRadiusBottom: 'bottom',
            readonly: 'readonly',
          })
    .datepicker-group__datepicker(class=`datepicker-group__datepicker_${amountField}` || false)
      +datepicker()