include ../../components/datepicker/datepicker.pug
include ../../elements/base-input/base-input.pug

mixin datepicker-with-inputs(placeholder, date, size, amountField)
  .datepicker-group
    .datepicker-group__inputs
      if (amountField === 'only')
        .datepicker-group__input(class='datepicker-group__input_'+ size || false)
          +base-input(placeholder[0], date[0], 'arrow-down', 'top', 'bottom', '', 'readonly')
      else if (amountField === '')
        .datepicker-group__input(class='datepicker-group__input_'+ size || false)
          +base-input(placeholder[0], date[0], 'arrow-down', 'top', 'bottom', '', 'readonly')
        .datepicker-group__input(class='datepicker-group__input_'+ size || false)
          +base-input(placeholder[1], date[1], 'arrow-down', 'top', 'bottom', '', 'readonly')
    .datepicker-group__datepicker(class='datepicker-group__datepicker_'+ amountField || false)
      +datepicker()