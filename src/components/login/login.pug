mixin login(text)
    .login-container
        span.login-container__title= text
        .login-container__login-details
            +base-input('', 'Email', 'large', '', 'top', 'bottom')
            +base-input('', 'Пароль', 'large', '', 'top', 'bottom')
        +base-button('Войти', 'large', 'background')
        .login-container__have-an-account
            span.login-container__text Уже есть аккаунт на Toxin
            +base-button('Войти', 'small', 'border')