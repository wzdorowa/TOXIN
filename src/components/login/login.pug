mixin login({ text = 'Form name' } = {})
  .login
    h2.login__title= text
    input.login__input(type='email', placeholder='Email')
    input.login__input(type='password', placeholder='Пароль')
    .login__check-in-button
      +button({ text: 'Войти', decor: 'solid', directed: true, size: 'large', href: '../../pages/landing/landing.pug' })
    .login__have-an-account
      span.login__text Нет аккаунта на Toxin?
      .login__create-button
        +button({ text: 'Создать', decor: 'bordered', size: 'large', href: '../../pages/registration/registration.pug' })