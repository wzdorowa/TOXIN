mixin login({text = 'Form name'} = {})
  .login
    span.login__title= text
    .login__login-details
      .login__input-item
        +input({
          placeholder: 'Email',
          type: 'email',
          hasBorderRadiusTop: true,
          hasBorderRadiusBottom: true,
          isHide: true,
        })
      .login__input-item
        +input({
          placeholder: 'Пароль',
          type: 'password',
          hasBorderRadiusTop: true,
          hasBorderRadiusBottom: true,
          isHide: true,
        })
    .login__check-in-details
      a.login__check-in-button(href='../../pages/landing/landing.pug', target='_blank')
        +button({text: 'Войти', decor: 'background', arrow: 'arrow', type: 'submit', height: 'large'})
      .login__have-an-account
        span.login__text Нет аккаунта на Toxin?
        a.login__create-button(href='../../pages/registration/registration.pug', target='_blank')
          +button({text: 'Создать', decor: 'border', type: 'submit', height: 'large'})