mixin login(title = 'Войти')
  -
    const loginButton = {
      text: 'Войти',
      type: 'solid',
      isDirected: true,
      size: 'large',
      href: '../../pages/landing/landing.pug'
    }

  -
    const createButton = {
      text: 'Создать',
      type: 'bordered',
      size: 'large',
      href: '../../pages/registration/registration.pug'
    }

  .login
    h2.login__title= title
    input.login__input(type='email', placeholder='Email')
    input.login__input(type='password', placeholder='Пароль')
    .login__check-in-button
      +button(loginButton)
    .login__have-an-account
      span.login__text Нет аккаунта на Toxin?
      .login__create-button
        +button(createButton)
