include ../../elements/base-input/base-input.pug
include ../../elements/base-button/base-button.pug
include ../dropdown/dropdown.pug
include ../../components/datepicker-with-inputs/datepicker-with-inputs.pug

mixin form-search-room(text, dateFormat)
  .form-search-room
    span.form-search-room__title= text
    -const placeholder = ['Прибытие', 'Выезд']
    +datepicker-with-inputs(placeholder, dateFormat, 'small-width', '')
    .form-search-room__dropdown-container
      +dropdown('Гости', 'Сколько гостей', '', '', '', '', 'readonly')
        +dropdown-row('Взрослые', '2')
        +dropdown-row('Дети', '1')
        +dropdown-row('Младенцы', '0')
    .form-search-room__select-button
      +base-button('Подобрать номер', 'background', 'arrow', 'button')