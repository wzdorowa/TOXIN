include ../../elements/base-input/base-input.pug
include ../../elements/base-button/base-button.pug

mixin searchRoom(text)
    .searchRoom-container
        span.searchRoom-container__title= text
        +base-input('Прибытие', 'ДД.ММ.ГГГГ', 'small', 'arrow-down', 'top', 'bottom')
        +base-input('Выезд', 'ДД.ММ.ГГГГ', 'small', 'arrow-down', 'top', 'bottom')
        +base-input('Гости', 'Сколько гостей', 'large', 'arrow-down', 'top', 'bottom')
        +base-button('Подобрать номер', 'large', 'large', 'background', 'arrow')