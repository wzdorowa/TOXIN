include ../../elements/rate-button/rate-button.pug

mixin numberCard(number, text, cost, amount)
	.numberCard-container
		.numberCard-container__slider
			.numberCard-container__content(class='numberCard-container__content_'+number)
			.numberCard-container__content(class='numberCard-container__content_'+number)
			.numberCard-container__content(class='numberCard-container__content_'+number)
			.numberCard-container__content(class='numberCard-container__content_'+number)
			.numberCard-container__prev
			.numberCard-container__next
		.numberCard-container__slider-dots
			span.numberCard-container__switch-slider
			span.numberCard-container__switch-slider
			span.numberCard-container__switch-slider
			span.numberCard-container__switch-slider
		.numberCard-container__description
			.numberCard-container__data
				.numberCard-container__specification
					span.numberCard-container__sign-number №
					span.numberCard-container__number= number
					span.numberCard-container__kind= text
				.numberCard-container__cost
					span.numberCard-container__cost-room= cost
						| &#x20bd
					span.numberCard-container__cost-room-description в сутки
			.numberCard-container__data-border
			.numberCard-container__reviews
				.numberCard-container__rate-group-button
						+rate-button()
				.numberCard--container__amount
					span.numberCard-container__amount-reviews= amount
					span.numberCard-container__amount-reviews-description
						|  Отзывов