include ../../elements/radio-button/radio-button.pug
include ../../elements/toggle/toggle.pug

mixin checkIn(text)
	.checkIn-container
		span.checkIn-container__title= text
		.checkIn-container__user-data
			.checkIn-container__group-inputs
				+base-input('', '', 'Имя', 'large', '', 'top', 'bottom')
				+base-input('', '', 'Фамилия', 'large', '', 'top', 'bottom')
			.checkIn-container__buttons
				+radio-button('Мужчина', 'checked')
				+radio-button('Женщина')
		+base-input('Дата рождения', 'padding', 'ДД.ММ.ГГГГ', 'large', '', 'top', 'bottom')
		.checkIn-container__login-details
			.checkIn-container__group-inputs-login
				+base-input('Данные для входа в сервис', 'padding', 'Email', 'large', '', 'top', 'bottom')
				+base-input('', '', 'Пароль', 'large', '', 'top', 'bottom')
			+toggle('Получать спецпредложения')
		.checkIn-container__checkIn-details
			+base-button('Зарегистрироваться', 'large', 'large', 'background', 'arrow')
			.checkIn-container__have-an-account
				span.checkIn-container__text Уже есть аккаунт на Toxin
				+base-button('Войти', 'medium', 'large', 'border')