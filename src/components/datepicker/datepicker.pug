mixin datepicker()
  .calendar
    .calendar__content.js-calendar__content.datepicker-here(data-range='true')
    .calendar__buttons
      .calendar__buttons-container.calendar__buttons-container_for-clear.js-calendar__buttons-container_for-clear
        +base-button({text: 'Очистить', decor: 'noDecor'})
      .calendar__buttons-container.calendar__buttons-container_for-apply.js-calendar__buttons-container_for-apply
        +base-button({text: 'Применить', decor: 'noDecor'})