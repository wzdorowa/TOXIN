include ../../elements/dropdown-row/dropdown-row.pug

mixin dropdown(label, placeholder, display, readonly)
  .dropdown
    .dropdown__list
      +base-input(label, placeholder, '', 'top', '', 'dropdown-list', readonly)
      span.dropdown__list-arrow-down
    .dropdown__content
      .dropdown__rows
        block
      .dropdown__buttons(class='dropdown__buttons_'+display || false)
        +base-button('Очистить', '', 'noDecor', '', 'button')
        +base-button('Применить', '', 'noDecor', '', 'button')
