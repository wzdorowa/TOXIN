include ../../elements/dropdown-row/dropdown-row.pug

mixin dropdown(label, placeholder, display, readonly)
  .dropdown
    .dropdown__list
      +base-input(label, placeholder, 'text', 'arrow-down', 'top', '', 'dropdown-list', readonly)
    .dropdown__content
      .dropdown__rows
        block
      .dropdown__buttons(class='dropdown__buttons_'+display || false)
        .dropdown__buttons-container.dropdown__buttons-container_for-clear
          +base-button('Очистить', '', 'noDecor', '', 'button')
        .dropdown__buttons-container.dropdown__buttons-container_for-apply
          +base-button('Применить', '', 'noDecor', '', 'button')
